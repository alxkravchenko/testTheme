<section class="section hero_mod">
	<picture class="hero_bg">
		<source srcset="{{ section.settings.background_webp | img_url: 400 }}" type="image/webp"/>
		<source srcset="{{ section.settings.background | img_url: 400 }}" type="image/jpg"/><img class="cover_img" src="{{ section.settings.background | img_url: 400 }}" alt=""/>
	</picture>
	<div class="section_in">
		<div class="hero height_mod">
			<picture class="decor pos_1_mod size_1_mod v1_mod">
				<source srcset="{{ section.settings.decor_1_webp | img_url: 400 }}" type="image/webp"/>
				<source srcset="{{ section.settings.decor_1 | img_url: 400 }}" type="image/png"/><img class="cover_img" src="{{ section.settings.decor_1 | img_url: 400 }}" alt=""/>
			</picture>
			<picture class="decor pos_2_mod size_2_mod v2_mod">
				<source srcset="{{ section.settings.decor_2_webp | img_url: 400 }}" type="image/webp"/>
				<source srcset="{{ section.settings.decor_2 | img_url: 400 }}" type="image/png"/><img class="cover_img" src="{{ section.settings.decor_2 | img_url: 400 }}" alt=""/>
			</picture>
			<picture class="decor pos_3_mod size_1_mod v3_mod">
				<source srcset="{{ section.settings.decor_1_webp | img_url: 400 }}" type="image/webp"/>
				<source srcset="{{ section.settings.decor_1 | img_url: 400 }}" type="image/png"/><img class="cover_img" src="{{ section.settings.decor_1 | img_url: 400 }}" alt=""/>
			</picture>
			<h2 class="section_title lg_mod font_mod offset_mod">Donâ€™t E<span class="size_in">F</span><span class="size_in_2">F</span> this up.</h2>
			<div class="section_descr center_mod offset_mod">Create awesome content in one shot!</div>
			<div class="btn_wrap center_mod offset_mod pos_mod"><a class="btn_base mob_sm_mod" href="#">Shop If Prompted</a>
				<div class="btn_pointer">Buy This!</div>
			</div>
			<div class="hero_main">
				<picture class="hero_img">
					<source srcset="{{ section.settings.hero_main_webp | img_url: 400 }}" type="image/webp"/>
					<source srcset="{{ section.settings.hero_main | img_url: 400 }}" type="image/png"/><img class="contain_img" src="{{ section.settings.hero_main | img_url: 400 }}" alt=""/>
				</picture>
				<div class="hero_text">
					<div class="hero_text_item"><strong>STURDY &</strong> PURDY</div>
					<div class="hero_text_item"><strong>ENDLESSLY</strong> REUSABLE</div>
					<div class="hero_text_item"><strong>FITS EVERY <br>LENS</strong> PERFECTLY</div>
					<div class="hero_text_item"><strong>LIFETIME</strong> GUARANTEE</div>
				</div>
			</div>
			<picture class="hero_logo">
				<source srcset="{{ section.settings.hero_logo_webp | img_url: 400 }}" type="image/webp"/>
				<source srcset="{{ section.settings.hero_logo | img_url: 400 }}" type="image/png"/><img class="cover_img" src="{{ section.settings.hero_logo | img_url: 400 }}" alt=""/>
			</picture>
		</div>
	</div>
</section>

